@model DrivingSchoolWebApp.Services.Models.School.DeleteSchoolViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-area="Administration" asp-controller="ManageSchools" asp-action="Delete" asp-route-id="@Model.Id" asp-route-username="@Model.ManagerUserName" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManagerUserName" class="control-label"></label>
                <input asp-for="ManagerUserName" class="form-control" value="@Model.ManagerUserName" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="TradeMark" class="control-label"></label>
                <input asp-for="TradeMark" class="form-control" value="@Model.TradeMark" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="OfficeAddress" class="control-label"></label>
                <input asp-for="OfficeAddress" class="form-control" value="@Model.OfficeAddress" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" value="@Model.Phone" disabled/>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </form>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
