@model DrivingSchoolWebApp.Services.Models.School.SchoolViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>


<div class="card border-primary mb-3" style="max-width: 18rem;">
    <div class="card-header"><h4></h4></div>
    <div class="card-body text-primary">
        <h5 class="card-title">Primary card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.TradeMark</h5>
        <p class="card-text">Courses offered @Model.CoursesOffered.Count() | Car Owned @Model.OwnedCars.Count() | Hired trainers @Model.Trainers.Count()</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">ManagerName: @Model.Manager.FirstName  @Model.Manager.LastName</li>
        <li class="list-group-item">Address: @Model.OfficeAddress</li>
        <li class="list-group-item">@Model.Phone</li>
    </ul>
    <div class="card-body">
        <a asp-controller="ManageSchools" asp-action="Edit" asp-route-id="@Model.Id" class="card-link">Edit school details</a>
        <a asp-controller="ManageSchools" asp-action="Delete" asp-route-id="@Model.Id" class="card-link">Delete school</a>
    </div>
</div>
  
<div>
   <a asp-action="Index">Back to List</a>
</div>
