@model DrivingSchoolWebApp.Services.Models.School.SchoolViewModel

@{
    ViewData["Title"] = "Manage";
}

<h2>Manage</h2>

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.TradeMark</h5>
        <p class="card-text">Courses offered @Model.CoursesOffered.Count() | Car Owned @Model.OwnedCars.Count() | Hired trainers @Model.Trainers.Count()</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">ManagerName: @Model.Manager.FirstName  @Model.Manager.LastName</li>
        <li class="list-group-item">Address: @Model.OfficeAddress</li>
        <li class="list-group-item">@Model.Phone</li>
    </ul>
    <div class="card-body">
        <a asp-area="SchoolManage" asp-controller="Schools" asp-action="Edit" asp-route-id="@Model.Id" class="card-link">Edit school details</a>
        <a asp-area="SchoolManage" asp-controller="Cars" asp-action="Create" class="card-link">Add new car</a>
        <a asp-area="SchoolManage" asp-controller="Trainers" asp-action="Create" class="card-link">Add a trainer</a>
    </div>
</div>
  
<div>
    <a asp-action="Index">Back to List</a>
</div>
