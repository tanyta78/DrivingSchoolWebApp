@model DrivingSchoolWebApp.Web.Models.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Register</h1>
<hr class="chushka-bg-color w-50 hr-2" />
<form asp-controller="Account" asp-action="Register" class="mx-auto w-50 text-center" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="form-group col">
            <label asp-for="Username" class="control-label"></label>
            <input asp-for="Username" class="form-control" id="username" placeholder="Username..." name="username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" id="email" placeholder="Email..." name="email" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" id="password" placeholder="Password..." name="password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" id="confirmPassword" placeholder="Confirm Password..." name="confirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
   <hr class="chushka-bg-color hr-2" />
    <div class="row">
        <div class="form-group col">
            <label asp-for="FirstName" class="control-label">First Name</label>
            <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="First Name..." name="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="LastName" class="control-label">Last Name</label>
            <input asp-for="LastName" class="form-control" id="LastName" placeholder="Last Name..." name="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
   @* todo: create register view *@
   <hr class="chushka-bg-color hr-2" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Register</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
