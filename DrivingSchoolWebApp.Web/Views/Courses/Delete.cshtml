@model DrivingSchoolWebApp.Services.Models.Course.DeleteCourseViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="card h-100">
        <div class="card-body">
            <h4 class="card-title d-flex justify-content-between">
                <small>Trainer: @Model.TrainerNickName</small>
                <small>Category: @Model.Category.ToString()</small>
            </h4>
            <hr />
            <p class="card-text">@Model.SchoolTradeMark | @Model.CarVIN </p>
        </div>
    </div>
    <form asp-controller="Courses" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-controller="Courses" asp-action="Offered">Back to List</a>
    </form>
</div>
