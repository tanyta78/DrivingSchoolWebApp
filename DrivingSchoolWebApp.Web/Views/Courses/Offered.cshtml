@using DrivingSchoolWebApp.Data.Models.Enums
@model IEnumerable<DrivingSchoolWebApp.Services.Models.Course.OfferedCoursesViewModel>

@{
    ViewData["Title"] = "Offered";
}

<h2>Offered Courses</h2>

<p>
    <a asp-controller="Courses" asp-action="Create">Create New Course</a>
</p>
<div class="container-fluid">
    <div class="row mt-5 col-md-3">
        <form id="myForm1" asp-controller="Courses" asp-action="Offered" method="post">
            <div class="form-row align-items-center">
                <div class="col-auto">
                    <select name="category" asp-items="Html.GetEnumSelectList<Category>()" onchange="this.form.submit">
                        <option selected="selected" value="">Please select</option>
                        <option value="All">All</option>
                    </select>
                </div>
            </div>
        </form>
    </div>

    <div class="row mt-5 mb-5" style="overflow-y: auto;">

        @foreach (var course in Model)
        {
            <div class="col-lg-4 col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between">
                            <small>Trainer: @course.TrainerNickName</small>
                            <small>Category: @course.Category.ToString()</small>
                        </h4>
                        <hr />
                        <p class="card-text">@course.CarMake | @course.CarModel | @course.CarTransmission | @course.CarTransmission</p>
                        <p>Car VIN: @course.CarVIN</p>
                        <p>Course price: @course.Price</p>

                    </div>
                    <div class="card-footer">
                        <a small class="text-muted card-link" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">Go to CourseInfo</a>
                        <a small class="text-muted card-link" asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id">Edit Course</a>
                        <a small class="text-muted card-link" asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id">Delete Course</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section Scripts{
    <script>
        $("select").change(function () {
            $("#myForm1").submit();
        });
    </script>

}

