@model DrivingSchoolWebApp.Services.Models.Feedback.CreateFeedbackInputModel

@{
    ViewData["Title"] = "Create";
}

<h2>Give feedback</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="" asp-controller="Feedbacks" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <input asp-for="CustomerId" class="form-control" type="hidden" value="@Model.CustomerId" />
           <input asp-for="CourseId" class="form-control" type="hidden" value="@Model.CourseId" />
           <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Give feedback" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="All">Back to List</a>
</div>

