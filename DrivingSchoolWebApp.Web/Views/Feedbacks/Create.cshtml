@model DrivingSchoolWebApp.Services.Models.Feedback.CreateFeedbackInputModel

@{
    ViewData["Title"] = "Create";
}

<!-- Page Header -->
<div class="page-header-section">
    <div class="container">
        <div class="row">
            <div class="page-header-area">
                <div class="page-header-content">
                    <h2>Give feedback</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!--Form Container Start-->
<div class="container d-flex justify-content-center">
    <div class="card col-md-8 mt-15 d-flex">
        <div class="card-header">
            <h5 class="text-center">Add feedback details</h5>
        </div>
        <div class="card-body d-flex ">
            <form asp-area="" asp-controller="Feedbacks" asp-action="Create" method="post" class="mx-auto w-75">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="CustomerId" class="form-control" type="hidden" value="@Model.CustomerId" />
                <input asp-for="CourseId" class="form-control" type="hidden" value="@Model.CourseId" />
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group justify-content-center d-flex">
                    <input type="submit" value="Give feedback" class="btn btn-common btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Container End-->
<div>
    <a asp-action="All">Back to List</a>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
