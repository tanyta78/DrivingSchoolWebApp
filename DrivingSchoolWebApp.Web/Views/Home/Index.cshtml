@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Home Page";
}
<div class="d-flex justify-content-center">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="jumbotron mt-3 text-center app-bg-color w-85">
