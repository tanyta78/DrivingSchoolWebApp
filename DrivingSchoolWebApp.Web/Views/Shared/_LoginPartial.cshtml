@using DrivingSchoolWebApp.Data.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="collapse navbar-collapse d-flex justify-content-between" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a asp-controller="Home" asp-action="Index" class="nav-link text-dark font-weight-bold">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">

        </li>
        @if (this.User.Identity.IsAuthenticated)
        {
            <li class="nav-item dropdown">
                <a class="nav-link text-dark font-weight-bold dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Courses
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-controller="Courses" asp-action="All">All courses</a>
                    <a class="dropdown-item" asp-controller="Courses" asp-action="My">My courses</a>
                    @if (this.User.IsInRole("School"))
                    {
                        <a class="dropdown-item" asp-controller="Courses" asp-action="Create">Create course</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>

                    }
                </div>
            </li>
            if (this.User.IsInRole("School"))
            {
                <li class="nav-item dropdown">
                    <a class="nav-link text-dark font-weight-bold dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Trainers and Cars
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown2">
                        <a class="dropdown-item" asp-controller="Trainers" asp-action="All">All Trainers</a>
                        <a class="dropdown-item" asp-controller="Cars" asp-action="All">All Cars</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Trainers" asp-action="Create">Create trainer</a>
                        <a class="dropdown-item" asp-controller="Cars" asp-action="Create">Create car</a>
                    </div>
                </li>
            }
            <li class="nav-item dropdown">
                <a class="nav-link text-dark font-weight-bold dropdown-toggle" href="#" id="navbarDropdown3" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Orders and payments
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown3">
                    <a class="dropdown-item " asp-controller="Orders" asp-action="All">All Orders</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-controller="Payments" asp-action="All">All Payments</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold" asp-controller="Lessons" asp-action="All">All Lessons</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold" asp-controller="Exams" asp-action="All">All Exams</a>
            </li>

        }
    </ul>
    @if (!this.User.Identity.IsAuthenticated)
    {
        <ul class="navbar-nav ">
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold " asp-controller="Account" asp-action="Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold " asp-controller="Account" asp-action="Register">Register</a>
            </li>
        </ul>
    }
    @if (this.User.Identity.IsAuthenticated)
    {
        <ul class="navbar-nav ">
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold" asp-controller="Home" asp-action="Index">Hello @User.Identity.Name!</a>
            </li>
            @if (this.User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="AdminPanel">Admin Panel</a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold" asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
        </ul>
    }
</div>

