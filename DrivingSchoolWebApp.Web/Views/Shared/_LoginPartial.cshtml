@using DrivingSchoolWebApp.Data.Models
@using DrivingSchoolWebApp.Data.Models.Enums
@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="collapse navbar-collapse d-flex justify-content-between" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a asp-controller="Home" asp-action="Index" class="nav-link text-dark font-weight-bold">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">

        </li>
        @if (this.User.Identity.IsAuthenticated)
        {
           if (this.User.IsInRole("School"))
            {
                <partial name="_SchoolNavigation" />
            }
            else if(@UserManager.GetUserAsync(User).Result.UserType == UserType.Customer)
            {
                <partial name="_UserNavigation" />
            }
            else
            {
                <partial name="_TrainerNavigation"/>
            }

        }
    </ul>
    @if (!this.User.Identity.IsAuthenticated)
    {
        <ul class="navbar-nav ">
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold " asp-controller="Account" asp-action="Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold " asp-controller="Account" asp-action="Register">Register</a>
            </li>
        </ul>
    }
    @if (this.User.Identity.IsAuthenticated)
    {
        <ul class="navbar-nav ">
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Hello @User.Identity.Name!</a>
            </li>
            @if (this.User.IsInRole("School"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="SchoolManage" asp-controller="Schools" asp-action="Manage">Manage profile</a>
                </li>
            }
            @if (this.User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Administration" asp-controller="Users" asp-action="AdminPanel">Admin Panel</a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link text-dark font-weight-bold" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
        </ul>
    }
</div>

